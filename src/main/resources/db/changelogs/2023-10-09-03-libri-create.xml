<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="2023-10-09-03-libri-create" author="Matteo Buosi">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="libri"/>
            </not>
        </preConditions>
        <comment>libri create</comment>
        <createTable tableName="libri">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="isbn" type="VARCHAR(255)"/>
            <column name="titolo" type="VARCHAR(255)"/>
            <column name="id_autore" type="BIGINT(20)"/>
            <column name="id_casa_editrice" type="BIGINT(20)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="libri" baseColumnNames="id_autore" constraintName="FK_LIBRI_ON_AUTORI"
                                 referencedTableName="autori"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="libri" baseColumnNames="id_casa_editrice"
                                 constraintName="FK_LIBRI_ON_CASA_EDITRICE"
                                 referencedTableName="casa_editrice"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropTable tableName="libri"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
